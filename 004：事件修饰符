            <input type="button" value="点他" @click.stop="btnHandler">//阻止事件冒泡
        </div> -->

        <div class="inner" @click.capture="divHandler">//由外到内捕获
            <input type="button" value="点他" @click="btnHandler">
        </div>
    </div>
    <script>
        var vm=new Vue({
           el:'#app',
           data:{},
           methods:{
               divHandler(){
                   console.log('div')
               },
               btnHandler(){
                   console.log('input')
               },
               linkclick(){
                   console.log('a')
               }
           }
        });
    </script>
